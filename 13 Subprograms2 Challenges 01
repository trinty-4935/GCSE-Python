def options():
    print("0) Exit")
    print("1) Timetable")


def inp():
    num = int(input("Enter an Oprion 0-1 >>> "))
    if num == 0:
        print("Bye")
    elif num == 1:
        mul()
    else:
        print("Invalid Input")
        inp()

def mul():
    num = int(input("Enter a number 1 to 12 >>> "))
    for i in range(num):
        print("Timetable")

options()
inp()
    
